    <div class="conteiner-title">
        <a href="/products/1" class="title">PROGRAMACIÓN</a> 
    </div>

    <section class="box-flex">
        <% programacion.forEach(book => { %>
            <article class="article-style">
                <a href="/products/detail/<%= book.id_book %>">
