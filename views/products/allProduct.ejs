<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head.ejs', {'datos':datos.activar}) %>
    <title> <%= categoryName %> | EntrePáginas </title>
</head>
<body class="login-body">
    <%- include('../partials/navbar.ejs') %>
    <main>

        <div class="generos">
            <div class="icons-genero">
                <a href="/products/1">
                    <i class="fa-solid fa-laptop-code icon-genre"></i>
                    <p class="title-genre">Programación</p>
                </a>
            </div>
            <div class="icons-genero">
                <a href="/products/2">
                    <i class="fa-solid fa-comments-dollar icon-genre"></i>
                    <p class="title-genre">Economía</p>
                </a>
            </div>
            <div class="icons-genero">
                <a href="/products/3">
                    <i class="fa-solid fa-brain icon-genre"></i>
                    <p class="title-genre">Psicología</p>
                </a>
            </div>
            <div class="icons-genero">
                <a href="/products/4">
                    <i class="fa-solid fa-book-open-reader icon-genre"></i>
                    <p class="title-genre">Ficción</p>
                </a>
            </div>
            <div class="icons-genero"> 
                <a href="/products/5">
                    <i class="fa-solid fa-graduation-cap icon-genre"></i>
                    <p class="title-genre">Educación</p>
                </a>
            </div>
        </div>
        
        <div class="conteiner-title">
            <a class="title"><%= categoryName %></a> 
        </div>

        <section class="box-flex">
            <% allProduct.forEach(book => { %>

                
    
                <article class="article-style">
                    <a href="/products/detail/<%= book.id_book %>">
                        <div class="conteiner-img">
                        <img
                        src="/img/<%= book.image %>"
                        alt="<%= book.name %>"
                        />
                        </div>
                        <div class="info">
                            <p class="descripcion"><%= book.name %></p>
                            <p class="author"><%= book.author %></p>                          
                            <div class="box-linea">
                                <p class="precios">$<%= book.price %></p>
                                <p class="desc"><%= book.stock ? "Disponible" : "Sin Stock" %></p>
                            </div>
                        </div>
                    </a>
                </article>
            <%}) %>
        </section>

    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="https://kit.fontawesome.com/6868278fd3.js" crossorigin="anonymous"></script>
</body>
</html>